<%= render 'bingo_games/scoreboard' %>

<p id="currentNumber">...</p>

<div class="text-center">
	<btn class="btn btn-primary" id="resumeGame">Resume</btn>
	<btn class="btn btn-primary" id="stopGame">Pause</btn>
</div>

<div class="text-right">

	<%= form_for(@current_game) do |f| %>
		<%= hidden_field_tag :players, @current_game[:players], id: "players" %>
		<%= hidden_field_tag :num_players, @current_game[:num_players], id: "num_players" %>
		<%= hidden_field_tag :call_cycle, @current_game[:call_cycle], id: "gameSpeed" %>
		<%= hidden_field_tag :called_numbers, @current_game[:called_numbers], id:"called_numbers" %>

		<% if logged_in? %>
			<%= f.submit "Save Game", class: "btn btn-primary", id: "saveGameBtn" %>
		<% end  %>
	<% end %>

</div>




